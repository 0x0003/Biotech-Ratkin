<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<!--Add you pawnkinddefs here that you don't want spawning with ratkin winter coats,
they will ignore the apparel requirements for warmth. Note: Tribals would freeze to death if they come at cold temps) -->

  <!-- Vanilla -->
  
<Operation Class="PatchOperationSequence">

 <operations>
 
  <li Class="PatchOperationConditional">
    <xpath>Defs/PawnKindDef[@Name="TribalBase"]/apparelIgnoreSeasons</xpath>
    <nomatch Class="PatchOperationAdd">
      <xpath>Defs/PawnKindDef[@Name="TribalBase"]</xpath>
      <value>
        <apparelIgnoreSeasons>true</apparelIgnoreSeasons>
      </value>
    </nomatch>
	<match Class="PatchOperationReplace">
      <xpath>Defs/PawnKindDef[@Name="TribalBase"]/apparelIgnoreSeasons</xpath>
      <value>
        <apparelIgnoreSeasons>true</apparelIgnoreSeasons>
      </value>
    </match>
  </li>
  
